<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="117dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#F8F8F8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:layout_margin="@dimen/marginMedium"
                android:adjustViewBounds="true"
                android:src="@drawable/human"
                app:shapeAppearanceOverlay="@style/RoundImageView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginMedium"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="38dp"
                    android:layout_height="20dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/rounded_red_text"
                    android:paddingStart="8dp"
                    android:text="3 hr"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.87"
                    android:text="@string/engineer"
                    android:textColor="#122940"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:alpha="0.87"
                    android:text="@string/russian"
                    android:textColor="#122940"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView

                    android:drawableLeft="@drawable/baseline_location_on_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.60"
                    android:textSize="13sp"
                    android:text=" UK"

                    android:textColor="#122940" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="105dp"
                    android:alpha="0.87"
                    android:textSize="12sp"
                    android:text="@string/_5_days_ago"
                    android:textColor="#122940" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="@string/_150_reviews"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/_4_5"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/baseline_star_24"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>